if $use-fonts {
  for key, $font in $fonts-arr {
    @font-face {
      font-family: unquote($font.name);
      src: url($fonts-path + $font.file + '.ttf') format("truetype");
      font-weight: $font.weight;
      font-style: $font.style;
    }
  }
}