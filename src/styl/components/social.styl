.social {

  flexy(center, center, row, nowrap);
  
  &--inline {
    flex-wrap: nowrap;
  }
  
  &__link {
    display: block;
    font-size: 1.25rem;
    line-height: 1;
    
    {hover-focus-active} {
      color: inherit;
      text-decoration: none;
    }
  }
  &__link + &__link {
    margin-left: 2rem;
  }
  
  &__text {
    display: none;
  }
  
  &__text,
  &__icon {
    vertical-align: middle;
  }
  &__icon {
    border-radius: 50%;
    padding: 0.325rem;
  }
  
  &__title {
    width: 100%;
    font-size: $font-size--main;
    letter-spacing: 0.0.5em;
    text-align: left;
    margin: 0 auto 1.5rem;
  }
  &--inline &__title {
    width: auto;
    font-size: $font-size--base;
    text-align: left;
    margin: 0;
    text-transform: none;
  }
  
  &__delimiter {
    size(5rem, 1px);
    background: currentColor;
    margin: 0 1.25rem;
  }
  
}