.btn {
  display: inline-block;
  font-size: 16px;
  line-height: 1;
  text-align: center;
  vertical-align: middle;
  text-transform: uppercase;
  padding: 14px 50px;
  border: 1px solid;
  box-sizing: border-box;
  
  color: $btn-color;
  background: transparent;
  border-color: $color;
  
  {hover-focus-active} {
    color: black;
    background: $color;
    outline: 0;
  }
}

.btn-menu {
  display: block;
  relative();
  size(40px);
  background: transparent;
  border: 0;
  color: $color;
  cursor: pointer;
  
  div {
    absolute(50%, 0px);
    size(100%, 3px);
    border-radius: 2px;
    background: currentColor;
    
    &:first-of-type {
      transform: translateY(-12px);
    }
    &:last-of-type {
      transform: translateY(12px);
    }
  }
  
  {hover-focus-active} {
    outline: none;
    color: $blue;
  }
}